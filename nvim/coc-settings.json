{
  "elixir.pathToElixirLS": "~/.elixir-ls/release/language_server.sh",
  "snippets.ultisnips.enable": false,
  "languageserver": {
    "elixir": {
      "command": "elixir-ls",
      "filetypes": ["elixir", "eelixir"],
      "rootPatterns": ["mix.exs"],
      "settings": {
        "elixirLS": {
          "dialyzerEnabled": false,
          "fetchDeps": false
        }
      }
    }
  },
  "[html]": {
    "coc.preferences.formatOnSave": true
  },
  "[elixir]": {
    "coc.preferences.formatOnSave": true
  },
  "[javascript]": {
    "coc.preferences.formatOnSave": true
  },
  "[javascriptreact]": {
    "coc.preferences.formatOnSave": true
  },
  "[typescript]": {
    "coc.preferences.formatOnSave": true
  },
  "[typescriptreact]": {
    "coc.preferences.formatOnSave": true
  },
  "[json]": {
    "coc.preferences.formatOnSave": true
  },
  "[css]": {
    "coc.preferences.formatOnSave": true
  }
}
